{

  "variables": {
    "cloud_token": "{{env `VAGRANT_CLOUD_TOKEN`}}",
    "version": "0.3.1"
  },

    "builders": [
      {
        "type": "virtualbox-iso",
        "guest_os_type": "RedHat_64",
        "iso_url": "https://mirrors.edge.kernel.org/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1708.iso",
        "iso_checksum": "bba314624956961a2ea31dd460cd860a77911c1e0a56e4820a12b9c5dad363f5",
        "iso_checksum_type": "sha256",
        "vm_name": "docker-architecture-centos-7-1-x64",
        "boot_wait": "10s",
        "boot_command": [ "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"],
        "http_directory": "http",
        "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
        "ssh_username": "root",
        "ssh_password": "vagrant",
        "ssh_wait_timeout": "10000s",
        "ssh_pty": true,
        "disk_size": 40096,
        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "2048"],
            ["modifyvm", "{{.Name}}", "--cpus", "2"]
        ],
        "shutdown_command": "/sbin/halt -h -p"
      }
    ],

    "provisioners": [
   {
     "execute_command": "echo 'vagrant' | sudo -S -E bash '{{.Path}}'",
     "scripts": [
       "scripts/sshd.sh",
       "scripts/vagrant.sh",
       "scripts/graphical.sh",
       "scripts/virtualbox.sh",
       "scripts/cleanup.sh",
       "scripts/spacesaver.sh"
     ],
     "type": "shell"
   }
 ],

    "post-processors": [
      [{
      "type": "vagrant",
      "keep_input_artifact": false
    },
      {
        "type": "vagrant-cloud",
        "access_token": "{{user `cloud_token`}}",
        "box_tag": "dunod-docker/centos7",
        "version": "{{user `version`}}"
      }]
    ]

}
